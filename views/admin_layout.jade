!!!
html
  head
    //- Output page title
    - if (typeof title !== "undefined" )
      title= title
      meta(name='description', content='Sivagao, JavaScript engineer and development blog, open source projects, and discussion.')
    - else
      title= 'Sivagao Admin'
      meta(name='description', content='Sivagao,blog admin dashboard, JavaScript engineer and development blog, open source projects, and discussion.')

    meta(charset='utf-8')
    link(rel='icon', type='image/png', href='/favicon.png')
    - if (settings.env == 'development')
      link(rel='stylesheet', type='text/css', href='/css/bootstrap.css')
      link(rel='stylesheet', href='/css/font-awesome.css')
      link(rel='stylesheet', type='text/css', href='/css/awesome_theme.css')
      block style_head
    - else
      link(rel='stylesheet', href='/css/site.css')
    //- script(src='/js/ga.js')
  body
    .navbar
        .navbar-inner
            ul.nav.pull-right
                li.hidden-phone
                    a(href='/', role='button') Settings
                li#fat-menu.dropdown
                    a.dropdown-toggle(href='#', role='button', data-toggle='dropdown')
                        i.icon-user
                        | SivaGao
                        i.icon-caret-down
                    ul.dropdown-menu
                        li
                            a(tabindex='-1', href='#') My Account
                        li.divider
                        li
                            a.visible-phone(tabindex='-1', href='#') Settings
                        li.divider.visible-phone
                        li
                            a(tabindex='-1', href='sign-in.html') Logout
            a.brand(href='index.html') Awesome.
    #main-menu
        ul.nav.nav-tabs
            li.active
                a(href='index.html')
                    i.icon-home
                    span Dashboard
            li
                a(href='/manage/css')
                    i.icon-bar-chart
                    span CSS
            li
                a(href='/manage/js')
                    i.icon-briefcase
                    span JS
            li.theme-mobile-hack
                a(href='/manage/post')
                    i.icon-comment-alt
                    span Post
            li
                a(href='/manage/img')
                    i.icon-heart
                    span img
            li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                    i.icon-cog
                    | Settings
                    b.caret
                ul.dropdown-menu
                    li
                        a(href='/sign-in.html')
                            span Sign-in Page
                    li
                        a(href='/sign-up.html')
                            span Sign-up Page
                    li
                        a(href='/reset-password.html')
                            span Forgot Password Page
    #sidebar-nav
        ul#dashboard-menu.nav.nav-list
            li.active
                a(href='index.html')
                    i.icon-home
                    span Dashboard
            li
                a(href='/manage/css')
                    i.icon-bar-chart
                    span CSS
            li
                a(href='/manage/js')
                    i.icon-briefcase
                    span JS
            li.theme-mobile-hack
                a(href='/manage/post')
                    i.icon-comment-alt
                    span Post
            li
                a(href='/manage/img')
                    i.icon-heart
                    span img
